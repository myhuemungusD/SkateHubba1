{
  "firestore": {
    "database": "skatehubba",
    "location": "nam5",
    "rules": "infra/firebase/firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "infra/firebase/functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "storage": {
    "rules": "infra/firebase/storage.rules"
  }
}
