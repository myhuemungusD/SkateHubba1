rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- EXISTING RULES ---

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Tricks collection
    match /tricks/{trickId} {
      // Anyone can read tricks (public access)
      allow read: if true;

      // Only authenticated users can create tricks
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.name is string
                    && request.resource.data.name.size() > 0;

      // Only the trick owner can update or delete
      allow update, delete: if request.auth != null
                            && resource.data.userId == request.auth.uid;
    }

    // Chat messages
    match /chatMessages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null
                            && resource.data.userId == request.auth.uid;
    }

    // User presence
    match /presence/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // --- HELPERS FOR GAME OF SKATE ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Game docs have:
    // players: [p1Uid, p2Uid]
    // createdBy: string
    // state: { p1Letters, p2Letters, turn, status }
    // winnerId?: string | null
    // finishedAt?: timestamp | null
    function isGamePlayer(game) {
      return isSignedIn() && request.auth.uid in game.players;
    }

    function isValidNewGame(data) {
      // New games must start as a pending challenge from player 1
      return isSignedIn()
        && data.createdBy == request.auth.uid
        && data.players.size() == 2
        && data.players[0] == request.auth.uid
        && data.state.p1Letters == 0
        && data.state.p2Letters == 0
        && data.state.status == "PENDING_ACCEPT"
        && data.state.turn == request.auth.uid
        && (!("winnerId" in data) || data.winnerId == null)
        && (!("finishedAt" in data) || data.finishedAt == null);
    }

    function isStatusChange(before, after) {
      return before.state.status != after.state.status;
    }

    // Only defender (players[1]) can move PENDING_ACCEPT -> ACTIVE/DECLINED
    function canUpdateGameStatus(before, after) {
      return isSignedIn()
        && request.auth.uid == before.players[1]
        && before.state.status == "PENDING_ACCEPT"
        && (
          after.state.status == "ACTIVE" ||
          after.state.status == "DECLINED"
        );
    }

    function getGame(gameId) {
      return get(/databases/$(database)/documents/games/$(gameId)).data;
    }

    // --- GAME OF SKATE RULES ---

    // Top-level Game docs (collection: "games")
    match /games/{gameId} {

      // Only participants can read the game
      allow read: if isGamePlayer(resource.data);

      // Create: challenger creates a fresh pending game
      allow create: if isValidNewGame(request.resource.data);

      // Update: only participants, cannot change players/createdBy,
      // and status changes are restricted
      allow update: if isGamePlayer(resource.data)
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(["players", "createdBy"])
        && (
          // If status is not changing, allow (letters, turn, winner, etc.)
          !isStatusChange(resource.data, request.resource.data)
          // If status IS changing, only allow the defender to move PENDING_ACCEPT -> ACTIVE/DECLINED
          || canUpdateGameStatus(resource.data, request.resource.data)
        );

      // No deletes in MVP
      allow delete: if false;
    }

    // Rounds subcollection: games/{gameId}/rounds/{roundId}
    match /games/{gameId}/rounds/{roundId} {
      // Only game participants can see rounds
      allow read: if isGamePlayer(getGame(gameId));

      // Only participants can create/update rounds
      // (gameService enforces the detailed logic on the app side)
      allow create, update: if isGamePlayer(getGame(gameId));

      // No deletes in MVP
      allow delete: if false;
    }

    // --- DEFAULT SAFETY NET ---

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
